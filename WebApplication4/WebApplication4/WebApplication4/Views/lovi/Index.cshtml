@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>4 Columnas con Cabecera</title>

</head>
<style>

    /* Estilos generales */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background: #DADADA;
    }

    element.style {
        background: #DADADA;
    }

    .header {
        background-color: #fff9f9;
        padding: 10px 20px;
        border-bottom: 1px solid #ffffff;
        width: 50vh;
        margin-top: 10px;
        margin-left: 50px;
        border-radius: 10px;
        /* Ajuste de altura al 50% de la pantalla */
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        font-family: Calibri;
    }

    .logout-btn {
        width: 15%;
        padding: 10px;
        background-color: white;
        font-size: 14px;
        color: black;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        position: absolute;
        top: 10px; /* Ajusta según sea necesario */
        right: 10px;
    }

        .logout-btn:hover {
            background-color: #e74c3c;
        }

    /* Estilos de la sección de contenido */
    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
    }

    .column {
        width: calc(25% - 20px);
        margin: 10px;
        background-color: #f2f2f2;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
        border-radius: 10px;
    }

    .container h2 {
        text-align: center;
        margin: auto;
        background-color: #39A900;
        border-radius: 5px;
        color: white;
        font-family: Calibri;
    }

    .container p {
        color: black;
        padding: 10px;
        text-align: center;
    }

    .contenido {
        background-color: #D9D9D9;
        border-radius: 5px;
    }

    .submit-btn {
        width: 100%;
        padding: 10px;
        background-color: #39A900;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: #2E7D32;
        }

    .logout-btn {
        font-family: Calibri;
    }


    /* Estilos específicos */


    /* Estilos para el botón de cerrar sesión */

</style>


<body style="background-color:#DADADA;">

