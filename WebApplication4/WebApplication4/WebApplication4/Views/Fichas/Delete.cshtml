@model ClassLibrary1.Fichas

@{
    ViewBag.Title = "Eliminar Ficha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .card-header {
            background-color: #dc3545;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .form-actions {
            margin-top: 20px;
        }

        .btn {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Eliminar Ficha</h2>
            </div>
            <div class="card-body">
                <h3>¿Estás seguro de que quieres eliminar este registro?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.numero_ficha)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.numero_ficha)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.cupo_ficha)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.cupo_ficha)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.tipo_ficha)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.tipo_ficha)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.fecha_inicio)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.fecha_inicio)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.fecha_fin)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.fecha_fin)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Instructores.direccion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Instructores.direccion)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Programas.nombre_programa)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Programas.nombre_programa)
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
