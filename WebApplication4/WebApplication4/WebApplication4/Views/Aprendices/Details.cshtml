@model ClassLibrary1.Aprendices

@{
    ViewBag.Title = "Detalles del Aprendiz";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .card {
            background-color: #fff;
            border: none;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin: 30px auto;
            max-width: 600px;
            border-radius: 20px;
        }

        .card-header {
            background-color: #28a745;
            color: #fff;
            padding: 20px;
            border-radius: 15px 15px 0 0;
            text-align: center;
        }

        .card-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            color: black;
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }

        .detail-label {
            font-weight: bold;
            color: #333;
        }

        .detail-value {
            color: #666;
        }

        .action-buttons {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.nombre)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.nombre)</p>
            </div>
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.apellido)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.apellido)</p>
            </div>
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.numero_aprendiz)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.numero_aprendiz)</p>
            </div>
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.direccion)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.direccion)</p>
            </div>
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.correo)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.correo)</p>
            </div>
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.estado)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.estado)</p>
            </div>
            <div class="form-group">
                <label class="detail-label">@Html.DisplayNameFor(model => model.Usuarios.nombre)</label>
                <p class="detail-value">@Html.DisplayFor(model => model.Usuarios.nombre)</p>
            </div>
            <div class="action-buttons">
                <a href="@Url.Action("Edit", new { id = Model.aprendiz_id })" class="btn btn-primary">Editar</a>
                <a href="@Url.Action("Index")" class="btn btn-primary">Volver a la lista</a>
            </div>
        </div>
    </div>
</body>
</html>
