@model IEnumerable<ClassLibrary1.Asistencias>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SENA - Sistema de Asistencia</title>
    <style>
        body {
            margin: 0;
            font-family: 'Inter';
        }

        img {
            width: 100px;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            background-color: #39A900;
            color: white;
            width: 250px;
            padding: 20px;
            box-sizing: border-box;
        }

            .sidebar .user-icon {
                width: 100px;
                height: 100px;
                margin: 50% auto 20px;
                border-radius: 50%;
                background-size: cover;
                background-position: center;
            }

            .sidebar .welcome-message {
                font-size: 14px;
                margin-top: 200px;
            }

        .main-content {
            flex-grow: 1;
            background-color: #f0f0f0;
        }

        .header {
            background-color: #39A900;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
            margin-left: 10%;
            width: 80%;
            border-radius: 10px;
        }

            .header nav a {
                color: white;
                text-decoration: none;
                margin-left: 15px;
            }

                .header nav a:hover {
                    text-decoration: underline;
                }

        .content {
            padding: 20px;
        }

            .content h2 {
                margin-top: 0;
            }

        .table-container {
            margin-top: 20px;
            width: 90%;
            margin-left: 5%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #39A900;
            color: white;
        }

        .btn {
            background-color: #5cbf0d;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            text-align: center;
            display: inline-block;
            margin: 10px;
        }

            .btn:hover {
                background-color: #4ea50c;
            }

        .btn-download {
            background-color: #ffffff;
            color: #000000;
            border: 1px solid #000000;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            text-align: center;
            display: inline-block;
            margin: 10px;
        }

            .btn-download:hover {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="user-icon"></div>
            <div class="user-name">USER NAME</div>
            <div class="welcome-message">
                BIENVENIDA SR(A)! NOMBRE DEL INSTRUCTOR AL SISTEMA DE ASISTENCIAS DEL CENTRO PARA LA INDUSTRIA PETROQUÍMICA
            </div>
        </div>
        <div class="main-content">
            <div class="header">
                <div class="logo">
                    <img src="~/path/to/your/image.png" alt="SENA Logo">
                </div>
                <nav>
                    <a href="#">Inicio</a>
                    <a href="#">Consultar Fichas</a>
                    <a href="#">Cerrar Sesión</a>
                </nav>
            </div>
            <div class="content">
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Nombre y Apellido</th>
                                <th>Asistencias</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Aprendices.nombre</td>
                                    <td>@item.tipo == "Asistido" ? "X (Asistió)" : "O (No Asistió)"</td>
                                    <td>
                                        <button class="btn-download">Descargar Incapacidad</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <button class="btn">Generar Reporte</button>
                        <button class="btn">Generar Código</button>
                    </div>
                    <div id="mensaje" style="display: none;" class="alert alert-success">El código se generó exitosamente.</div>
                </div>
            </div>
        </div>
    </div>
    <div id="mensaje" style="display: none;" class="alert alert-success">El código se generó exitosamente.</div>

</body>

@if (TempData["CodigoVerificacion"] != null)
{


    if (ViewBag.Error != null)
    {
        <div style="color:red;">@ViewBag.Error</div>
    }

    if (ViewBag.Mensaje != null)
    {
        <div style="color:green;">@ViewBag.Mensaje</div>
    }
}
else
{
    <form method="post">
        <div>
            <label for="receptor">Correo Receptor:</label>
            <input type="email" name="receptor" required />
        </div>
        <button type="submit">Enviar Código</button>
    </form>
}
